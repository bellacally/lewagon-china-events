/* row */
.row{
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
}

.city-name{
  margin-left: 30rpx;
}

.container{
  position: relative;
  margin-top: 20rpx;
}
#cover_pic{
  display: flex;
  justify-content: center;
  width: 100%;
  height: 300rpx;
  margin-bottom: 50rpx;
  margin-top: 40rpx;
}
.background{
  width: 95%;
  border: solid 1px gray;
  /* box-shadow:2px -2px 2px rgba(0, 0, 0, 0.25); */
  border-radius:3px 3px 0px 0px;
}
.footer{
  height: 100rpx;
  border: solid 1px gray;
  margin-top: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

#share-btn{
  /* width: 50rpx; */
  height: 50rpx;
  background:transparent;
  position: absolute;
  right: 50rpx;
  bottom: 80rpx;
}
#share-img{
  width: 50rpx;
  height: 50rpx;
}
.share-icon{
  display: flex;
  align-items: center
}
#event-image{
  width: 100%;
  height: 400rpx;
  border-radius:3px;
}

.info{
  font-size: 28rpx;
  margin-top: 20rpx;
 
}
