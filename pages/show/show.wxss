.wrapper{
  /* width: 90vw; */
  background-color: #fcf5e8;
  justify-content:center;

}
.container{
  width: 100vw;
  margin:0 auto;
  /* justify-content: center; */

}
#event_image{
width: 100%;
height: 460rpx;
}
.row{
  display: flex;
  flex-direction: row;
  padding-left: 20rpx;
  height: 50rpx;
  padding-top:25rpx;
}

.row_container {
padding-bottom:30rpx;
width:90vw;
border-radius:8px;
box-shadow:0 25rpx 40rpx rgba(126,87,88,.1);
background-color:white;
margin:0 auto;
position:absolute;
top:300rpx;
left:45rpx;
}

.avatar_sec{
position:absolute;
top:-10rpx;
right:10rpx;
}

image.icon{
  width: 35rpx;
  height: 35rpx;
  padding-right:20rpx;
}

.more{
  padding-left: 20rpx;
  color: #62ddf5;
  height: 300rpx;
  overflow: hidden;
}
.subtitle{
  padding-left: 20rpx;
  font-weight: bold;
  font-size: 30rpx;
  margin-top:25rpx;
  padding-bottom:25rpx;

}
#icon{
  display: flex;
  justify-content: center;
}

#share_btn{
  height: 150rpx;
  background:transparent;
  position: absolute;
  right:20rpx;
  top:370rpx;
}

#share_btn::after{
  border:none;
}

#share_img{
  width: 80rpx;
  height: 80rpx;
}

.share_icon{
  display: flex; 
  height: 20rpx;
}

.cta{
  /* bottom: 0; */
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.btn{
  background: #FC1015;
  width: 155px;
  height: 40px;
  color: white;
  font-size: 28rpx;
  line-height:80rpx; 
}

.btn.attend{
  background:#0e0000;
}

.info{
padding-left: 20rpx;
overflow:hidden;
}
.info.long{
  margin-right: 5%;
  font-size: 13px;
  color: #888;
  -webkit-box-orient:vertical;

}
