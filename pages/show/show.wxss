.img_box{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.img_box image{
  width: 100%;
  height: 100%;
}



.map{
  width: 90vw;
  height: 400rpx;
  margin-bottom: 140rpx;
  margin:0 auto;
  padding-top: 20rpx;
 
}
.row.button{
position:absolute;
bottom:40rpx;
}
/* About section */
.long_dec{
   padding:20rpx;
    display: -webkit-box;
    font-size:28rpx;
    color:#cfcfd0;
    line-height: 40rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:6;
    overflow: hidden;
    text-overflow:ellipsis;
}
.hide{
  display: -webkit-box;
}
.show{
  display: block;
}
.arrow{
  position: absolute;
  width: 40rpx;
  height: 43rpx;
  left: 50%;
  transform: translate(-50%);
}

