@import '../../libs/font.wxss';
.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 3rpx;
 margin-bottom:20rpx;
}

.date{
  box-sizing: border-box;
  width:100rpx;
  height:120rpx;
  background-color: #fcf5e8;
  padding:20rpx;
  font-weight: 500;
  font-size:30rpx;
  margin-left:15rpx;
}
.month{
  font-weight: 300;
  font-size:23rpx;
}

.name{
  word-break:break-word;
  width:70%;
  padding-left:40rpx;
  font-family: Circular Std Book; 
}
  /* box: event time and event address */
.row{
  display:flex;
  flex-direction:row;
  padding-left:20rpx;
  padding-top:25rpx;
  padding-bottom:25rpx; 
}

