
<view class="container"> 
  <image class="banner" src='{{event_image}}'></image>
  <view class="row_container">
    <view class="row">
      <image class="icon" src="https://cloud-minapp-13908.cloud.ifanrusercontent.com/1gYqyabLlxUXtBUn.png"/>
      <view class ="info">{{event_date}}</view>
    </view>

    <view class="row">
      <image class="icon" src="https://cloud-minapp-13908.cloud.ifanrusercontent.com/1gZ6CjPj5mLjjf41.png"/>
      <view class ="info">{{event_address}}</view>
    </view>
  
    <view class="about_sec">
      <view class="subtitle">About</view>
      <view class="long_dec">{{event_description}}</view>
    </view>
  </view>
    <!-- <view class="subtitle">Location</view>
      <map class="map" id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="16" markers="{{markers}}"></map> -->
  <block wx:if="{{!attended}}">
      <button class="cta_primary" bindtap="signup">Attend</button> 
  </block>
  <button class="cta_secondary" open-type='share'>Invite</button>
</view>

 
    
 

