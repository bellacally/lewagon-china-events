<!--pages/show/show.wxml-->
<view class="container">
  <view class="header">
    <view id="event_image" style="background-image: linear-gradient(225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 80%), url('{{result.image}}'); background-size:cover;">
   </view>
  </view>

<view class="share_icon"> 
  <button id= "share_btn" open-type='share'>
    <image id="share_img" src="https://cloud-minapp-13908.cloud.ifanrusercontent.com/1gbGF6Ul9YF5oYiX.png"/>
  </button>
 </view>
 
 <view class="row_container">
   <view class="row">
    <image class="icon" src="https://cloud-minapp-13908.cloud.ifanrusercontent.com/1gYqyabLlxUXtBUn.png"/>
   <view class ="info">{{result.date}}</view>
  </view>

  <view class="row">
   <image class="icon" src="https://cloud-minapp-13908.cloud.ifanrusercontent.com/1gZ6CjPj5mLjjf41.png"/>
   <view class ="info">{{result.address}}</view>
 </view>
 </view>
 
 <view class="subtitle">About</view>
  <!-- <view class='bg-white marginTop10 vertical'> -->
    <text class="info long {{expand? 'expand':'unfold'}}" >
    {{result.description}}
    </text>
    <view bindtap='expand'>
    <image class='img-status' src="{{expand?'https://cloud-minapp-13908.cloud.ifanrusercontent.com/1gay15Qe9g8W1tP4.png':'https://cloud-minapp-13908.cloud.ifanrusercontent.com/1gay15G7vmoDi0YJ.png'}}"></image>
    </view>
  
<view class="subtitle">Location</view>
  <view class="map_container">
    <!--定义页面结构，可以使用地图组件也能使用其他组件 -->
     <map class="map" id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="16" markers="{{markers}}"></map>  
</view>

  <view class="row">
    <button class="btn attend" open-type="getUserInfo" bindgetuserinfo="userInfoHandler">Attend</button>
    <!-- <button >用户授权</button> -->
    <button class="btn" open-type='share'>Invite</button>
  </view>
</view>

