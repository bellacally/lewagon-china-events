.section {
  height:170px;
  background-color: #fff
}

.index{
  background-color: #fcf5e8;
  min-height: 100vh;
  margin: 0 auto;
}

.nowText {
position:absolute;
top:154rpx;
left:170rpx;
font-size:33rpx;
font-family: Circular Std;
}

.city_name{
  margin-left: 30rpx;
  font-family: Circular Std;
}

.illustrated-scenary-city{
  width: 100%;
  display:block;
}

/* event card section */
.card{
  width: 90vw;
  position: relative;
  border-radius:14rpx;
  box-shadow: 0 15px 35px rgba(126,87,88,.1), 0 5px 15px rgba(0,0,0,.07);
  background-color: #fff;
  margin: 0 auto;
  margin-bottom: 40rpx;
}

#event_image{
  width:100%;
  height:338rpx;
}

#share_btn{
  background:transparent;
  line-height: 20rpx;
}

#share_btn::after{
  border:none;
}

#share_img{
  width:80rpx;
  height:80rpx;
}

.footer{
  height: 130rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: white;
  align-items: center;
  font-size:28rpx;  
}

.info{
  width:80%;
  margin-left:15rpx;
  font-family: Avenir, Arial;
}

.info.date{
  width: 10vw;
  text-align: left;
  padding-left:30rpx;
  color: #fd1015;
}

.info.name{
 width: 60vw;
 word-break:normal ;
 padding-left: 30rpx;
 word-wrap:break-word;
}

#avatar{
width:100rpx;
height:100rpx;
border-radius:50%;
position:absolute;
top:-30rpx;
right:-8rpx;
}


