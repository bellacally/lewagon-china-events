.details.radio{
  margin-top: 15rpx; 
}

.label {
  font-size:30rpx;
  line-height: 5px;
  padding-bottom: 15rpx;
}

.section{
  padding: 20rpx;

}
.section_title{
 font-weight:600;
  font-size:30rpx;
  color:black;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}
.details{
  padding: 10rpx;
  font-size: 28rpx;
  
}
.all{
  padding: 0 25rpx;
  background: white;
  color: black;
  box-shadow: 1px 4px 7px #c1c1c1;
  margin: 25rpx 0;
  justify-content: space-between;
  align-items: center;
  border-radius:5px;
}

.details.row {
  display: flex;
  flex-direction: row;
}
.title{
  font-size: 25rpx;
  line-height: 2em;
  width:20%;
  padding-left: 20rpx;

}
textarea{
  background-color: #fff;
  margin-top:8px;
  width: 90%;
  margin-left: 4%;
  box-shadow: 1px 4px 7px #c1c1c1;
  height: 300rpx;
}
.message{
  padding:20rpx;
}

button{
  background: #FC1015;
  width: 155px;
  height: 40px;
  color: white;
  font-size: 28rpx;
  line-height:80rpx;
  margin-top: 20rpx;
}

.channel {
  height: 80rpx;
  padding: 0 25rpx;
  background: white;
  color: black;
  box-shadow: 1px 4px 7px #c1c1c1;
  margin: 25rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius:5px;
}

text{
  font-size: 25rpx;
}

.hide{
 display: none;
}
.show{ 
 display: block;

}

