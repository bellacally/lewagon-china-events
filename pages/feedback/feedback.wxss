/* pages/feedback/feedback.wxss */
page {
  /* background-color:#fcf5e8;   */
  font-family: Circular Std Book;
  background:#fcf5e8;
}
.wrapper{
   margin-bottom: 20rpx;
}
.header{
  justify-content: center;
  display: flex;
  font-size:32rpx;
  font-family: Circular Std Book;
  background-color:#0e0000;
  padding:30rpx 10rpx;
  width:100%;
  color: white;
}

.details.radio{
  margin-top: 15rpx; 
}

.label {
  font-size:30rpx;
  line-height: 5px;
  padding-bottom: 15rpx;
}

.section{
  padding: 20rpx;

}
.section_title{
  font-size:30rpx;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  font-family: SF Pro Text;
  font-weight: bold;

}
.details{
  padding: 10rpx;
  font-size: 28rpx;
  
}
.all{
  padding: 0 25rpx;
  background: white;
  color: black;
  box-shadow: 1px 4px 7px #c1c1c1;
  margin:0 auto;
  justify-content: space-between;
  align-items: center;
  border-radius:5px;
  width:90%;
}

.details.row {
  display: flex;
  flex-direction: row;
}
.title{
  font-size: 25rpx;
  line-height: 2em;
  width:20%;
  padding-left: 20rpx;
  font-family: Circular Std Book;

}
textarea{
  background-color: #fff;
  margin-top:8px;
  width: 90%;
  box-shadow: 1px 4px 7px #c1c1c1;
  height: 300rpx;
  margin:0 auto;
  font-family: SF Pro Text;
}
.message{
  padding:20rpx;
  font-family: Circular Std Book;
  font-size: 25rpx;
}

button{
  background: #FC1015;
  width: 155px;
  height: 40px;
  color: white;
  font-size: 28rpx;
  line-height:80rpx;
  margin-top: 20rpx;
}

.channel {
  height: 80rpx;
  padding: 0 25rpx;
  background: white;
  color: black;
  box-shadow: 1px 4px 7px #c1c1c1;
  margin: 25rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius:5px;
  /* background:#eaeaea; */
}

text{
  font-size: 25rpx;
}

.hide{
 display: none;
}
.show{ 
 display: block;

}
